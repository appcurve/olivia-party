{
  "compileOnSave": false,
  "compilerOptions": {
    "strict": true,
    "rootDir": ".",
    "sourceMap": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@firx/common-data": ["libs/shared/data/common/src/index.ts"],
      "@firx/nestjs-auth": ["libs/shared/nestjs/auth/src/index.ts"],
      "@firx/op-data": ["libs/shared/data/op/src/index.ts"],
      "@firx/op-data-api": ["libs/shared/data/api/src/index.ts"],
      "@firx/react-animated": ["libs/shared/react/animated/src/index.ts"],
      "@firx/react-feedback": ["libs/shared/react/feedback/src/index.ts"],
      "@firx/react-fetch": ["libs/shared/data/fetch/src/index.ts"],
      "@firx/react-forms-rhf": ["libs/shared/react/forms-rhf/src/index.ts"],
      "@firx/react-hooks": ["libs/shared/react/hooks/src/index.ts"],
      "@firx/react-modals": ["libs/shared/react/modals/src/index.ts"],
      "@firx/react-player-hooks": ["libs/player/react/hooks/src/index.ts"],
      "@firx/ts-guards": ["libs/shared/ts/guards/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp", "wip", "notes", "examples", "scripts"]
}
