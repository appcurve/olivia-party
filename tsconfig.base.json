{
  "compileOnSave": false,
  "compilerOptions": {
    "strict": true,
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@firx/common-data": ["libs/shared/data/common/src/index.ts"],
      "@firx/nestjs-auth": ["libs/shared/nestjs/auth/src/index.ts"],
      "@firx/op-data": ["libs/shared/data/op/src/index.ts"],
      "@firx/react-forms": ["libs/shared/react/forms/src/index.ts"],
      "@firx/react-hooks": ["libs/shared/react/hooks/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp", "notes", "examples", "scripts"]
}
